{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./source/",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "alwaysStrict": false,
        "target": "es6",
        "experimentalDecorators": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "plugins": []
    },
    "include": ["source/**/*.ts"],
    "exclude": ["node_modules"]
}
